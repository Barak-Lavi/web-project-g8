extends layout
block content
    form#searchResult.form-container(action='http://localhost:3000/purchaseForm', method='post')
      input(type='hidden' , name='LoggedInUser' , value= LoggedInUser)
      h1 Choose Departure Flight
      table.fl-table
        thead
          tr
            th(scope='col') Flight ID
            th(scope='col') From
            th(scope='col') To
            th(scope='col') Depurture Date
            th(scope='col') Remaining tickets
            th(scope='col') Total Price
            th(scope='col')
        tbody
          for departureShuttle in departureShuttleList
            tr
              th(scope='row')= departureShuttle.ID
              td= departureShuttle.from
              td= departureShuttle.to
              td= departureShuttle.departureDate
              td= departureShuttle.capacity
              td= departureShuttle.price
              td.FlightInfoCol
                input#ChooseFlight(type='checkbox', name='departureShuttle', value= departureShuttle.ID)
                label(for='ChooseFlight')
                br
      h1 Choose Return Flight
      table.fl-table
        thead
          tr
            th(scope='col') Flight ID
            th(scope='col') From
            th(scope='col') To
            th(scope='col') Return Date
            th(scope='col') Remaining tickets
            th(scope='col') Total Price
            th(scope='col')
        tbody
          for returnShuttle in returnShuttleList
            tr
              th(scope='row')= returnShuttle.ID
              td= returnShuttle.from
              td= returnShuttle.to
              td= returnShuttle.departureDate
              td= returnShuttle.capacity
              td= returnShuttle.price
              td.FlightInfoCol
                input#ChooseFlight(type='checkbox', name='returnShuttle', value= returnShuttle.ID)
                label(for='ChooseFlight')
                br
                
      button.btn(type='submit', value='Purches') Purchase
      button.btn(type='button', value='Purches', onclick="window.history.back()") Back
